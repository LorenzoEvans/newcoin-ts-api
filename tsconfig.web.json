{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "alwaysStrict": true,
      "sourceMap": false,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "declaration": true,
      "allowJs": true,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "lib": ["es2017", "dom"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.test.ts"]
  }